# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/sih-farmer-advisory

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-here-make-it-long-and-random
JWT_REFRESH_EXPIRES_IN=30d

# OpenRouter Configuration
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (for password reset, notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourapp.com

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES=5

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:5173

# Redis Configuration (optional, for session storage)
REDIS_URL=redis://localhost:6379

# Application Settings
APP_NAME=Digital Krishi Officer
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-Based Farmer Query Support and Advisory System

# Security Settings
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# API Keys for External Services
WEATHER_API_KEY=your-weather-api-key
MARKET_API_KEY=your-market-data-api-key

# Development Settings
DEBUG=true
ENABLE_CORS=true
TRUST_PROXY=false
