# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_SOCKET_URL=http://localhost:5000

# Application Configuration
VITE_APP_NAME=Digital Krishi Officer
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-Based Farmer Query Support and Advisory System

# Authentication
VITE_JWT_STORAGE_KEY=dko_auth_token
VITE_REFRESH_TOKEN_KEY=dko_refresh_token

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_THEME_STORAGE_KEY=dko_theme

# Language Configuration
VITE_DEFAULT_LANGUAGE=en
VITE_LANGUAGE_STORAGE_KEY=dko_language

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,audio/mpeg,audio/wav

# Chat Configuration
VITE_MAX_MESSAGE_LENGTH=10000
VITE_TYPING_INDICATOR_TIMEOUT=3000
VITE_MESSAGE_PAGINATION_LIMIT=50

# UI Configuration
VITE_SIDEBAR_COLLAPSED_KEY=dko_sidebar_collapsed
VITE_NOTIFICATION_TIMEOUT=5000
VITE_TOAST_POSITION=top-right

# Development Configuration
VITE_ENABLE_DEVTOOLS=true
VITE_DEBUG_MODE=true
VITE_MOCK_API=false

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=your-ga-id-here
VITE_HOTJAR_ID=your-hotjar-id-here

# Social Media Links
VITE_GITHUB_URL=https://github.com/your-repo
VITE_TWITTER_URL=https://twitter.com/your-handle
VITE_LINKEDIN_URL=https://linkedin.com/company/your-company

# Contact Information
VITE_SUPPORT_EMAIL=support@yourapp.com
VITE_SUPPORT_PHONE=+91-1234567890

# Feature Flags
VITE_ENABLE_VOICE_INPUT=true
VITE_ENABLE_IMAGE_UPLOAD=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_MULTILINGUAL=true

# External Services
VITE_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
VITE_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# PWA Configuration
VITE_PWA_NAME=Digital Krishi Officer
VITE_PWA_SHORT_NAME=DKO
VITE_PWA_DESCRIPTION=AI-powered agricultural advisory system
VITE_PWA_THEME_COLOR=#10b981
VITE_PWA_BACKGROUND_COLOR=#ffffff

# Error Tracking (optional)
VITE_SENTRY_DSN=your-sentry-dsn-here

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
